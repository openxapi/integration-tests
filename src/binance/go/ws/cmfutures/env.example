# Binance CMFUTURES WebSocket API Configuration
# Copy this file to env.local and fill in your credentials

# API credentials (required for authenticated endpoints)
export BINANCE_API_KEY="your-api-key-here"
export BINANCE_SECRET_KEY="your-secret-key-here"

# Optional: Use RSA or Ed25519 authentication instead of HMAC
# export BINANCE_PRIVATE_KEY_PATH="/path/to/your/private-key.pem"

# Server configuration (optional, defaults to testnet)
# export BINANCE_WS_SERVER="testnet1"  # Options: mainnet1, testnet1

# Test configuration (optional)
export TEST_SYMBOL="BTCUSD_PERP"  # Default test symbol for CMFUTURES (Coin-M uses USD not USDT)
export TEST_VERBOSE="true"         # Enable verbose logging